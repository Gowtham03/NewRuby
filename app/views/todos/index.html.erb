<h1>listing all todos</h1>
<%= link_to "create a todo", new_todo_path %>  
<table border="2">
  <tr>
    <th>Name</th><th>Description</th>
     </tr>
    <% @todos.each do |td| %>
    <tr>
      <td><%= td.name %></td>
      <td><%= td.description %></td>
      <td><%= link_to "Edit",edit_todo_path(td) %></td>
      <td><%= link_to "Show",todo_path(td) %> <td>
      <td><%= link_to 'Delete', todo_path(td), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
 </table>